<style>
  .nav {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    justify-content: space-between;

    padding: 24px;
    border-bottom: 2px solid var(--color-on-base);
    backdrop-filter: blur(5px);
    box-shadow: inset 0px 0px 500px 0px var(--color-base);
  }

  .nav__title-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
  }

  .nav__title {
    font-family: var(--font-display);
    font-size: 48px;
  }

  .nav__subtitle {
    font-size: smaller;
  }

  .nav__list {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    padding: 0;
    margin: 0;
  }

  .nav__item {
    display: block;
    padding: 0px 4px;
    font-size: smaller;
  }

  .nav__placeholder {
    height: 88px;
  }

  .nav__monogram {
    font-family: var(--font-monogram);
  }

  @media (max-width: 720px) {
    .nav {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .nav__title-section {
      align-items: center;
    }

    .nav__title {
      font-size: 32px;
    }

    .nav__subtitle {
      display: none;
    }

    .nav__list {
      padding-top: 12px;
    }
  }
</style>
