---
import summary from '../../_cache/data/summary.json'
import LinkBlock from '../components/LinkBlock.astro'
import Base from '../layouts/Base.astro'

const pages = summary.filter((page) => page.route.startsWith('/random/'))
---

<Base>
  <article>Random bits from life</article>

  <section class="link__grid">
    {pages.map((page) => <LinkBlock item={page} />)}
  </section>
</Base>
